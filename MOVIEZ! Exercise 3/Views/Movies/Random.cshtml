@model MOVIEZ_.ViewModels.RandomMovieViewModel

@{
    ViewBag.Title = "Random";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .popular {
        color:red;
    }
</style>

@{ 
    var className = Model.Customers.Count < 5 ? "popular" : null;
}

<h1 class="@className">Movie Name: @Model.Movie.Name</h1>
<h2>Movie ID: @Model.Movie.Id</h2>

@if (Model.Customers.Count == 0)
{
    <p>This movie has never been rented.</p>
}

<ul>
    @foreach (var customer in Model.Customers)
    {
        <li>@customer.Name</li>
    }
</ul>

